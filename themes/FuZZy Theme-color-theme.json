{
  "name": "FuZZy Theme",
  "type": "light",
  "colors": {
    // Panel Title
    "panelTitle.activeBorder": "#fa8500",
    "panelTitle.activeForeground": "#1b60a5",
    "panelTitle.inactiveForeground": "#2e87ec",

    // Input
    "input.background": "#ececec",
    "input.border": "#2e87ec",
    "inputOption.activeBorder": "#1b60a5",
    "inputValidation.infoBorder": "#1b60a5",
    "inputValidation.infoBackground": "#01325f",
    "inputValidation.warningBackground": "#01325f",
    "inputValidation.errorBackground": "#01325f",
    "inputValidation.errorBorder": "#dc3958",

    // Editor
    "editor.background": "#fafafa",
    "editor.foreground": "#01325f",
    "editor.selectionBackground": "#b0ddfcaa",
    "editorWidget.background": "#ececec",
    "editorHoverWidget.background": "#ececec",
    "editorGroupHeader.tabsBackground": "#ececec",
    "editorLineNumber.activeForeground": "#fa8500",
    "editor.lineHighlightBackground": "#dff2ffaa",
    "editorCursor.foreground": "#01325f",
    "editorWhitespace.foreground": "#ececec",
    "editorBracketMatch.border": "#dc3958",

    // Selection and Minimap
    "selection.background": "#b0ddfcbb",
    "minimap.selectionHighlight": "#b0ddfcbb",

    // Title & Tab bars
    "tab.inactiveBackground": "#ececec",
    "tab.lastPinnedBorder": "#2e87ec",
    "titleBar.activeBackground": "#e0e0e0",

    // Status bar
    "statusBar.background": "#ececec",
    "statusBar.foreground": "#01325f",
    "statusBar.debuggingBackground": "#ececec",
    "statusBar.debuggingForeground": "#01325f",
    "statusBar.noFolderBackground": "#ececec",
    "statusBarItem.remoteBackground": "#fa8500",
    "statusBarItem.remoteForeground": "#ececec",

    // Activity bar
    "activityBar.background": "#ececec",
    "activityBar.foreground": "#01325f",
    "activityBarBadge.background": "#fa8500",
    "activityBarBadge.foreground": "#ececec",
    "activityBar.inactiveForeground": "#2e87ec",

    // Sidebar
    "sideBar.background": "#fafafa",
    "sideBar.foreground": "#01325f",
    "sideBar.border": "#ececec",

    // Menu
    "menu.background": "#ececec",
    "menu.foreground": "#01325f",

    // Peek
    "peekViewTitle.background": "#ececec",
    "peekView.border": "#b0ddfc",
    "peekViewResult.background": "#ececec",
    "pickerGroup.foreground": "#2e87ec",
    "pickerGroup.border": "#b0ddfc",
    "peekViewEditor.background": "#ececec",
    "peekViewEditor.matchHighlightBackground": "#b0ddfc",

    // Badge
    "badge.background": "#fa8500",
    "progressBar.background": "#ececec",

    // Button
    "button.background": "#fa8500",

    // Lists & Quick Input
    "list.activeSelectionBackground": "#b0ddfc",
    "list.activeSelectionForeground": "#01325f",
    "list.inactiveSelectionBackground": "#ececec", /* activity bar area */
    "list.inactiveSelectionForeground": "#01325f",
    "list.highlightForeground": "#fa8500",
    "list.hoverBackground": "#c5e6fcbb",
    // "quickInput.background": "#ececec",
    // "quickInput.foreground": "#01325f",
    // "quickInputList.focusBackground": "#b0ddfc",
    // "quickInputList.focusForeground": "#af1400",

    // Terminal & Dropdown
    "terminal.background": "#fafafa",
    "terminal.dropBackground": "#ececec",
    "terminal.foreground": "#01325f",
    "dropdown.background": "#ececec",
    "dropdown.foreground": "#af1400",
  },
  "tokenColors": [
    {
      "scope": "source",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "scope": [
        "meta.embedded",
        "source.groovy.embedded",
        "source.elixir.embedded",
        "source.coffee.embedded"
      ],
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Text",
      "scope": "variable.parameter.function",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Comments",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#bbb"
      }
    },
    {
      "name": "Punctuation",
      "scope": [
        "punctuation.definition.string",
        "punctuation.definition.variable",
        "punctuation.definition.string",
        "punctuation.definition.parameters",
        "punctuation.definition.string",
        "punctuation.definition.array"
      ],
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Delimiters",
      "scope": "none",
      "settings": {
        "foreground": "#d3af86"
      }
    },
    {
      "name": "Operators",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator.new.cpp",
        "keyword.operator.delete.cpp",
        "keyword.other.using",
        "keyword.other.operator"
      ],
      "settings": {
        "foreground": "#2d7ad3"
      }
    },
    {
      "name": "Variables",
      "scope": "variable",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.require",
        "support.function.any-method"
      ],
      "settings": {
        "fontStyle": "",
        "foreground": "#af1400"
      }
    },
    {
      "name": "Classes",
      "scope": [
        "support.class",
        "entity.name.class",
        "entity.name.type",
        "entity.name.namespace",
        "entity.name.scope-resolution",
      ],
      "settings": {
        "fontStyle": "",
        "foreground": "#07705f"
      }
    },
    {
      "name": "Methods",
      "scope": "keyword.other.special-method",
      "settings": {
        "foreground": "#07705f"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "foreground": "#2e87ec"
      }
    },
    {
      "name": "Support",
      "scope": "support.function",
      "settings": {
        "foreground": "#0056a7"
      }
    },
    {
      "name": "Strings, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "#809440"
      }
    },
    {
      "name": "Integers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Floats",
      "scope": "none",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Boolean",
      "scope": "none",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Constants",
      "scope": "constant",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Tags",
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#dc3958"
      }
    },
    {
      "name": "Attributes",
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Attribute IDs",
      "scope": [
        "entity.other.attribute-name.id",
        "punctuation.definition.entity"
      ],
      "settings": {
        "foreground": "#8ab1b0"
      }
    },
    {
      "name": "Selector",
      "scope": "meta.selector",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Values",
      "scope": "none",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Headings",
      "scope": [
        "markup.heading",
        "markup.heading.setext",
        "punctuation.definition.heading",
        "entity.name.section"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#8ab1b0"
      }
    },
    {
      "name": "Units",
      "scope": "keyword.other.unit",
      "settings": {
        "foreground": "#fa8500"
      }
    },
    {
      "name": "Bold",
      "scope": [
        "markup.bold",
        "punctuation.definition.bold"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#f06431"
      }
    },
    {
      "name": "Italic",
      "scope": [
        "markup.italic",
        "punctuation.definition.italic"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#98676a"
      }
    },
    {
      "name": "Code",
      "scope": "markup.inline.raw",
      "settings": {
        "foreground": "#889b4a"
      }
    },
    {
      "name": "Link Text",
      "scope": "string.other.link",
      "settings": {
        "foreground": "#dc3958"
      }
    },
    {
      "name": "Link Url",
      "scope": "meta.link",
      "settings": {
        "foreground": "#f79a32"
      }
    },
    {
      "name": "Lists",
      "scope": "markup.list",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "Quotes",
      "scope": "markup.quote",
      "settings": {
        "foreground": "#f79a32"
      }
    },
    {
      "name": "Separator",
      "scope": "meta.separator",
      "settings": {
        "foreground": "#d3af86"
      }
    },
    {
      "name": "Inserted",
      "scope": "markup.inserted",
      "settings": {
        "foreground": "#889b4a"
      }
    },
    {
      "name": "Deleted",
      "scope": "markup.deleted",
      "settings": {
        "foreground": "#dc3958"
      }
    },
    {
      "name": "Changed",
      "scope": "markup.changed",
      "settings": {
        "foreground": "#98676a"
      }
    },
    {
      "name": "Colors",
      "scope": "constant.other.color",
      "settings": {
        "foreground": "#7e602c"
      }
    },
    {
      "name": "Regular Expressions",
      "scope": "string.regexp",
      "settings": {
        "foreground": "#7e602c"
      }
    },
    {
      "name": "Escape Characters",
      "scope": "constant.character.escape",
      "settings": {
        "foreground": "#7e602c"
      }
    },
    {
      "name": "Embedded",
      "scope": [
        "punctuation.section.embedded",
        "variable.interpolation"
      ],
      "settings": {
        "foreground": "#088649"
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid",
      "settings": {
        "foreground": "#dc3958"
      }
    },
    // CSS
    {
      "name": "CSS: Property Names",
      "scope": [
        "meta.property-name",
        "support.type.property-name"
      ],
      "settings": {
        "foreground": "#2e87ec"
      }
    },
    // HTML
    {
      "name": "HTML: Tag Names",
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#01325f"
      }
    },
    {
      "name": "HTML: Attribute Names",
      "scope": [
        "meta.tag entity.other.attribute-name",
        "entity.other.attribute-name.html"
      ],
      "settings": {
        "fontStyle": "",
        "foreground": "#2e87ec"
      }
    },
  ],
  "semanticHighlighting": true
}